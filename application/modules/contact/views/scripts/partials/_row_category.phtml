<tr>
	<td class="field">
		<span class="field-title">
			<i class="icon-edit"></i>
			<a href='<?=$this->baseUrl()?>/contact/category/edit/id/<?php echo $this->id; ?>'><?php echo $this->title ?></a>
		</span>
		<br>
		<?php echo $this->description ?>
	</td>
	<td class="center">
		<?php if( strlen($this->image) > 0 ) : ?>
		<?php 
			$imageParts = explode('.', $this->image);
			$imgName = current( $imageParts );
			$ext = end( $imageParts );
		?>
			<img src="<?php echo $this->baseUrl().'/upload/contact/thumbs/'.$imgName.'_thumb.'.$ext ?>" 
				alt="<?php echo $this->image ?>" />
		<?php endif; ?>
	</td>
	<td class="center">
		<?php if ( $this->published ): ?>
			<a href='<?=$this->baseUrl()?>/contact/category/publish/id/<?php echo $this->id;?>' class="badge badge-success">
			<?php echo $this->translate("LBL_PUBLISHED") ?>
			</a>
		<?php else: ?>
			<a href='<?=$this->baseUrl()?>/contact/category/publish/id/<?php echo $this->id;?>' class="badge badge-important">
			<?php echo $this->translate("LBL_UNPUBLISHED") ?>
			</a>
		<?php endif; ?>
	</td>
	<td class="center">
		<i class="icon-trash"></i>
		<a href='<?=$this->baseUrl()?>/content/article/delete/id/<?php echo $this->id; ?>'><?php echo $this->translate("LBL_DELETE") ?></a>
	</td>
	<td class="center"><?php echo $this->ordering ?></td>
	<td class="center"><?php echo $this->id ?></td>
</tr>
